pipeline {
    agent 
    {
        node{
            label 'deployee'
        }
    }

    stages {
        stage('git clone') {
            steps {
                git 'https://github.com/rayudukaturi123/hotel.git'
            }
        }
        stage('apache2 install'){
             steps{
                 sh 'sudo apt install apache2 -y'
                 sh 'sudo rm -rf /var/www/html/*'
             }
        }
      
    }
}
